{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "dist",
		"target": "es2017",
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts", "index.ts"],
	"exclude": ["node_modules", "dist", "test"]
}
